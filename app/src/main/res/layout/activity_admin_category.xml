<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AdminCategoryActivity">

    <TextView
        android:id="@+id/slogan_category"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:text="Add New Product"
        android:textAlignment="center"
        android:textSize="28sp"
        android:textStyle="bold"
        />

    <LinearLayout
        android:id="@+id/linear1_category_layout"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_below="@+id/slogan_category"
        android:orientation="horizontal"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp">

        <TextView
            android:id="@+id/t_shirts"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginRight="5dp"
            android:layout_weight="1"
            android:background="@drawable/rounded_background"
            android:clickable="true"
            android:gravity="center"
            android:text="T-Shirts"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/sports_t_shirts"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="Sports T-Shirts"
            android:gravity="center"
            android:layout_marginRight="5dp"
            android:background="@drawable/rounded_background"
            android:clickable="true"
            android:textStyle="bold"
            />

        <TextView
            android:id="@+id/female_dresses"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="Female Dresses"
            android:gravity="center"
            android:layout_marginRight="5dp"
            android:background="@drawable/rounded_background"
            android:clickable="true"
            android:textStyle="bold"
            />

        <TextView
            android:id="@+id/sweaters"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="Sweaters"
            android:gravity="center"
            android:background="@drawable/rounded_background"
            android:clickable="true"
            android:textStyle="bold"
            />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linear2_category_layout"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_below="@+id/linear1_category_layout"
        android:orientation="horizontal"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:layout_marginTop="20dp">

        <TextView
            android:id="@+id/glasses"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="Glasses"
            android:gravity="center"
            android:layout_marginRight="5dp"
            android:background="@drawable/rounded_background"
            android:clickable="true"
            android:textStyle="bold"
            />

        <TextView
            android:id="@+id/purses_bags_wallets"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="Purses, Bags, Wallets"
            android:gravity="center"
            android:layout_marginRight="5dp"
            android:background="@drawable/rounded_background"
            android:clickable="true"
            android:textStyle="bold"
            />

        <TextView
            android:id="@+id/hats_caps"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="Hats, Caps"
            android:gravity="center"
            android:layout_marginRight="5dp"
            android:background="@drawable/rounded_background"
            android:clickable="true"
            android:textStyle="bold"
            />

        <TextView
            android:id="@+id/shoes"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="Shoes"
            android:gravity="center"
            android:background="@drawable/rounded_background"
            android:clickable="true"
            android:textStyle="bold"
            />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linear3_category_layout"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_below="@+id/linear2_category_layout"
        android:orientation="horizontal"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:layout_marginTop="20dp">

        <TextView
            android:id="@+id/headphones_handfree"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="Headphones, Handfree"
            android:gravity="center"
            android:layout_marginRight="5dp"
            android:background="@drawable/rounded_background"
            android:clickable="true"
            android:textStyle="bold"
            />

        <TextView
            android:id="@+id/laptop_pc"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="Laptop, PC"
            android:gravity="center"
            android:layout_marginRight="5dp"
            android:background="@drawable/rounded_background"
            android:clickable="true"
            android:textStyle="bold"
            />

        <TextView
            android:id="@+id/watches"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="Watches"
            android:gravity="center"
            android:layout_marginRight="5dp"
            android:background="@drawable/rounded_background"
            android:clickable="true"
            android:textStyle="bold"
            />

        <TextView
            android:id="@+id/mobilephones"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="Mobile Phones"
            android:gravity="center"
            android:background="@drawable/rounded_background"
            android:clickable="true"
            android:textStyle="bold"
            />
    </LinearLayout>

    <Button
        android:id="@+id/check_orders_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/admin_logout_btn"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="153dp"
        android:background="#FFC107"
        android:clickable="true"
        android:text="Check New Orders"
        android:textAllCaps="false"
        android:textColor="@android:color/white"
        android:textSize="18sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/admin_logout_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="26dp"
        android:background="#FFC107"
        android:clickable="true"
        android:text="Logout"
        android:textAllCaps="false"
        android:textColor="@android:color/white"
        android:textSize="18sp"
        android:textStyle="bold" />
</RelativeLayout>
